<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"    android:layout_height="wrap_content"
    android:background="#9dc4f6">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_ac_unit_white_48dp"
        android:paddingLeft="15dp"

        android:layout_centerVertical="true"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="22dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/title"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#142fdb"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/location"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/abc_input_method_navigation_guard"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/price"
        android:ellipsize="end"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/contact"
        android:ellipsize="end"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="#ed4343"
        android:visibility="invisible"/>
    </LinearLayout>
</RelativeLayout>